{
  "name": "USC ITP CTA Hours",
  "version": "1.0",
  "description": "Calculate how many hours needed for CTA's for any ITP course",
  "background": {
  	"scripts": ["background.js"],
  	"persistent":false

  },
  
  "page_action":{
    "default_popup":"popup.html",
    "default_icon":{
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "permissions":["declarativeContent", "activeTab", "https://classes.usc.edu/*", "http://*/"],
  "icons":{
  	"16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}